<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Main Page with Weather</title>
    <link rel="stylesheet" href="/stylesheets/styles.css" />
</head>
<body>
<header>

    </div>
    <div class="profile" id="profileBtn" tabindex="0" aria-haspopup="true" aria-expanded="false">
        <div class="logo">L</div>
        <div class="nickname"></div>
    </div>
    <nav class="burger-menu" id="burgerMenu" role="menu" aria-label="Profile menu">
        <a href="#" role="menuitem" id="historyLink">History</a>
        <a href="#" role="menuitem" id="logoutLink">Log out</a>
    </nav>
</header>

<!-- WEATHER SECTION -->
<main id="weatherSection">
    <form id="weatherForm">
        <input type="text" id="cityInput" placeholder="Enter city name" required />
        <button type="submit">Get Weather</button>
    </form>

    <div id="weatherResult" class="hidden">
        <h1 id="cityName"></h1>
        <h2 id="temperature"></h2>
        <p id="weatherDescription"></p>
    </div>
</main>

<script src="/main.js"></script>
</body>
</html>
